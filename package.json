{
  "name": "basic-nodejs-template",
  "version": "0.0.1",
  "description": "A basic template for nodejs applications",
  "main": "src/index.ts",
  "repository": "git@github.com:mkny/basic-nodejs-template.git",
  "author": "Marcony Neves <marconyneves@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=13",
    "npm": ">=7"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "node dist/index.js",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production babel src/ --out-dir dist/ --copy-files --no-copy-ignored --extensions .ts,.tsx,.js,.jsx",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx,.json src",
    "test": "jest --silent --coverage --logHeapUsage",
    "test:dev": "yarn test --watch",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-preset-minify": "^0.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "node-notifier": "^10.0.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pretty-quick --staged",
      "yarn lint --fix",
      "yarn test --coverage=false --passWithNoTests --findRelatedTests"
    ]
  }
}
